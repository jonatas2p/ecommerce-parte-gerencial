<body>
    <script>
        $('document').ready(() => {

            $('.teste4444').append('<li class="nav-item dropdown"><button class="nav-link dropdown-toggle btn btn-light" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="identify"><%=dados.usuario%></span><img class="avatar" src="/upload_user/perfil_masculino.png"></button><div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink"><a class="dropdown-item" href="/logout">Sair</a></div></li>')
            
        });

        //alteracao cadastro
        function alterdado() {
            $(".content").remove();
            $(".alterdado").attr('disabled', true)
            $('.conteudo').append('<div class="row marcador justify-content-center content"><form  method="POST" action="/alteruser"><div class="form-group"><label for="user">Usuario</label><input type="text" class="form-control" id="user" name="user" value="<%=dados.usuario%>" disabled></div><div class="form-group"> <label for="email">Email</label><input type="text" class="form-control" id="email" name="email" value="<%=dados.email%>" required></div><div class="form-group"></div><label for="password">Nova Senha</label><input type="password" class="form-control" id="password" name="passwordnew" required><div class="form-group"><input type="submit" class="btn btn-info mt-2" value="Alterar"></div></form></div>')
            $(".pedido").attr('disabled', false)


        }
        function pedido() {
            $(".pedido").attr('disabled', true)
            $(".content").remove();
            $(".conteudo").append('<div class="row marcador justify-content-center content"><%pedidos.forEach(pedidos=>{%><div class="row justify-content-center pedido"><div class="imagepedido col-md-2"><img src="<%=pedidos.image%>" alt="image"></div><div class="infopedido col-md-8"><p><%=pedidos.produto%></p><span class="text-success">R$: <%=pedidos.valor%></span></div><div class="acaopedido col-md-2"><button class="btn btn-success w-100">Rastrear pedido</button><button class="btn btn-danger w-100">Devolucao</button> </div></div><%})%></div>')
            $(".alterdado").attr('disabled', false)

        }
        
        function atendimento() {
            $(".atendimento").attr('disabled', true)
            $(".alterdado").attr('disabled', false)

            

        }

    </script>


